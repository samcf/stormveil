{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "noImplicitReturns": true,
        "outDir": "lib",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "plugins": [
            { "name": "typescript-tslint-plugin" }
        ]
    }
}
